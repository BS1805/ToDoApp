@using ToDoApp.Application.DTOs
@model TaskViewModel

@{
    ViewData["Title"] = "Task Details";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <h1 class="text-center">Task Details for @Model.Title</h1>
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-body">
                        <div class="form-group">
                            <label class="control-label">Title</label>
                            <input class="form-control" value="@Model.Title" readonly />
                        </div>

                        <div class="form-group">
                            <label class="control-label">Description</label>
                            <textarea class="form-control" rows="5" readonly>@(string.IsNullOrEmpty(Model.Description) ? "No description provided" : Model.Description)</textarea>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Status</label>
                            <span class="badge @(Model.IsCompleted ? "bg-success" : "bg-warning")">
                                @(Model.IsCompleted ? "Completed" : "Pending")
                            </span>
                        </div>

                        <div class="form-group mt-3">
                            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary float-start">
                                <i class="fas fa-edit me-1"></i>Edit Task
                            </a>
                            <a class="btn btn-outline-secondary float-end" asp-action="Index">
                                <i class="fas fa-arrow-left me-1"></i>Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
