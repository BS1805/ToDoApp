@model List<AdminUserDto>

@{
    ViewData["Title"] = "Manage Users";
}

<style>
    .job-card {
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease;
        border: none;
        border-radius: 15px;
        overflow: hidden;
    }

        .job-card:hover {
            box-shadow: 0 8px 12px rgba(0, 0, 0, 0.2);
        }

    .card-header {
        background-color: #d6eaf8;
        border-bottom: none;
        padding: 1.0rem;
    }

    .card-title {
        font-size: 1rem;
        font-weight: bold;
    }

    .card-body {
        padding: 1rem;
    }

    .card-text {
        font-size: 0.85rem;
        margin-bottom: 0.5rem;
    }

    .badge {
        font-size: 0.7rem;
        padding: 0.3rem 0.6rem;
        border-radius: 2rem;
    }

    .btn-details, .btn-test, .btn-success, .btn-danger, .btn-warning, .btn-primary {
        font-size: 0.8rem;
        padding: 0.4rem 0.8rem;
        border-radius: 20px;
    }

    .container {
        max-width: 1200px;
        margin-bottom: 50px;
    }

    .user-avatar {
        display: block;
        margin: auto;
        width: 80px;
        height: 80px;
        border-radius: 50%;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        color: white;
        font-size: 1.8rem;
        font-weight: bold;
        margin-bottom: 1rem;
    }

    .permission-section {
        background-color: #f8f9fa;
        border-radius: 10px;
        padding: 0.8rem;
        margin-bottom: 1rem;
    }

    .permission-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.5rem;
    }

    .form-check {
        margin-bottom: 0.3rem;
    }

    .form-check-label {
        font-size: 0.8rem;
        color: #555;
    }

    .section-title {
        font-size: 0.75rem;
        font-weight: bold;
        color: #666;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.5rem;
    }

    .stats-badge {
        background: linear-gradient(135deg, #28a745, #20c997);
        color: white;
        border-radius: 2rem;
        padding: 0.3rem 0.8rem;
        font-size: 0.75rem;
        font-weight: 500;
    }

    .role-badges {
        display: flex;
        flex-wrap: wrap;
        gap: 0.3rem;
    }

    .role-badge {
        background-color: #6c757d;
        color: white;
        font-size: 0.7rem;
        padding: 0.2rem 0.6rem;
        border-radius: 1rem;
    }

    .action-buttons {
        display: flex;
        flex-wrap: wrap;
        gap: 0.4rem;
        justify-content: space-between;
    }

    .btn-group-custom {
        display: flex;
        gap: 0.3rem;
        flex: 1;
    }

        .btn-group-custom .btn {
            flex: 1;
            min-width: 0;
        }

    .page-header {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        padding: 2rem 0;
        margin-bottom: 2rem;
        border-radius: 15px;
    }

        .page-header h2 {
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .page-header p {
            opacity: 0.9;
            margin-bottom: 0;
        }

    .btn-add-user {
        background: rgba(255, 255, 255, 0.2);
        border: 2px solid rgba(255, 255, 255, 0.3);
        color: white;
        font-weight: 500;
        border-radius: 20px;
        padding: 0.5rem 1.2rem;
        transition: all 0.3s ease;
    }

        .btn-add-user:hover {
            background: rgba(255, 255, 255, 0.3);
            border-color: rgba(255, 255, 255, 0.5);
            color: white;
            transform: translateY(-1px);
        }

    /* Mobile responsive improvements */
    @@media (max-width: 767.98px) {
        .card-title

    {
        font-size: 0.95rem;
    }

    .card-text {
        font-size: 0.8rem;
        margin-bottom: 0.4rem;
    }

    .user-avatar {
        width: 60px;
        height: 60px;
        font-size: 1.4rem;
    }

    .card-footer .btn {
        font-size: 0.75rem;
        padding: 0.3rem 0.6rem;
    }

    .card-footer {
        padding: 0.75rem;
    }

    .card-body {
        padding: 0.75rem;
    }

    .action-buttons {
        flex-direction: column;
    }

    .btn-group-custom {
        margin-bottom: 0.5rem;
    }

    .permission-grid {
        grid-template-columns: 1fr;
    }

    }

    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        color: #6c757d;
    }

        .empty-state i {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }
</style>

<div class="container">
    <!-- Page Header -->
    <div class="page-header p-3 rounded mb-4">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2>Manage Users</h2>
                <p class="text-muted">Control user accounts, roles, and permissions</p>
            </div>
            <a asp-controller="Account" asp-action="Register" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-person-plus"></i> Add User
            </a>
        </div>
    </div>

    <!-- Users Grid -->
    <div class="row">
        @foreach (var user in Model)
        {
            <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                <div class="card h-100 job-card">
                    <div class="card-header">
                        <h5 class="card-title d-flex justify-content-between align-items-center">
                            <span>@user.UserName</span>
                            <span class="stats-badge">@user.TaskCount Tasks</span>
                        </h5>
                    </div>
                    <div class="card-body p-3">
                        <div class="row">
                            <!-- Left Side: User Icon and Permissions -->
                            <div class="col-md-6 col-sm-12">
                                <!-- User Icon -->
                                <div class="text-center mb-3">
                                    <i class="bi bi-person-circle" style="font-size: 3rem; color: #6c757d;"></i>
                                </div>

                                <!-- Permissions Section -->
                                <div class="permission-section">
                                    <div class="section-title">Permissions</div>
                                    <form asp-action="UpdatePermissions" method="post">
                                        <input type="hidden" name="UserId" value="@user.Id" />
                                        @{
                                            var permissionList = new List<(int, string, string)> {
                                    (1, "Create", "bi-plus-circle"),
                                    (2, "Details", "bi-eye-fill"),
                                    (4, "Edit", "bi-pencil-square"),
                                    (8, "Delete", "bi-trash")
                                    };
                                        }
                                        <div class="permission-grid">
                                            @foreach (var perm in permissionList)
                                            {
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" name="Permissions[]" value="@perm.Item1"
                                                           id="perm_@(user.Id)_@perm.Item1"
                                                    @(user.Permissions != null && user.Permissions.Contains(perm.Item1) ? "checked" : "") />
                                                    <label class="form-check-label" for="perm_@(user.Id)_@perm.Item1">
                                                        <i class="@perm.Item3"></i> @perm.Item2
                                                    </label>
                                                </div>
                                            }
                                        </div>
                                        <button type="submit" class="btn btn-primary btn-sm mt-2 w-100">
                                            <i class="bi bi-check-lg"></i> Update
                                        </button>
                                    </form>
                                </div>
                            </div>

                            <!-- Right Side: Roles, Task Count, Status -->
                            <div class="col-md-6 col-sm-12">
                                <div class="permission-section">
                                    <div class="section-title">Roles</div>
                                    <div class="role-badges mt-1">
                                        @foreach (var role in user.Roles)
                                        {
                                            <span class="role-badge">@role</span>
                                        }
                                    </div>
                                </div>
                                <div class="permission-section mt-2">
                                    <div class="section-title">Task Count</div>
                                    <p class="card-text mb-0">@user.TaskCount</p>
                                </div>
                                <div class="permission-section mt-2">
                                    <div class="section-title">Status</div>
                                    <span class="badge bg-success text-white">ACTIVE</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Bottom Row: Action Buttons -->
                    <div class="card-footer">
                        <div class="d-flex justify-content-between">
                            <form asp-action="ActivateUser" method="post" class="flex-fill me-2">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-success text-white w-100">
                                    <i class="bi bi-check-circle"></i> Activate
                                </button>
                            </form>
                            <form asp-action="DeactivateUser" method="post" class="flex-fill me-2">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-warning text-white w-100">
                                    <i class="bi bi-pause-circle"></i> Deactivate
                                </button>
                            </form>
                            <form asp-action="DeleteUser" method="post" class="flex-fill">
                                <input type="hidden" name="userId" value="@user.Id" />
                                <button type="submit" class="btn btn-danger text-white w-100"
                                        onclick="return confirm('Are you sure you want to delete this user?')">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="bi bi-people"></i>
            <h4>No users found</h4>
            <p>Get started by adding your first user to the system.</p>
            <a asp-controller="Account" asp-action="Register" class="btn btn-primary">
                <i class="bi bi-person-plus"></i> Add First User
            </a>
        </div>
    }
</div>


