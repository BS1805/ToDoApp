@model List<AdminUserDto>

<h2>Manage Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>Roles</th>
            <th>Task Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>@user.TaskCount</td>
                <td>
                    <form asp-action="ActivateUser" method="post" style="display:inline;">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-success">Activate</button>
                    </form>
                    <form asp-action="DeactivateUser" method="post" style="display:inline;">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-warning">Deactivate</button>
                    </form>
                    <form asp-action="DeleteUser" method="post" style="display:inline;">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                    <form asp-action="UpdatePermissions" method="post" class="mt-2">
                        <input type="hidden" name="UserId" value="@user.Id" />
                        <h5>Permissions:</h5>
                        @{
                            
                            var permissionList = new List<(int, string)> {
                    (1, "Create"),
                    (2, "Details"),
                    (4, "Edit"),
                    (8, "Delete")
                    };
                        }
                        @foreach (var perm in permissionList)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" name="Permissions[]" value="@perm.Item1"
                                @(user.Permissions != null && user.Permissions.Contains(perm.Item1) ? "checked" : "") />
                                <label class="form-check-label">@perm.Item2</label>
                            </div>
                        }
                        <button type="submit" class="btn btn-primary mt-2">Update Permissions</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
