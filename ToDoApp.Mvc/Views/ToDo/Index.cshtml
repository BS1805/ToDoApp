@model ToDoApp.FrontEnd.Models.PagedListViewModel<ToDoApp.FrontEnd.Models.TaskViewModel>

@{
    ViewData["Title"] = "Task List";
    var pageSize = ViewData["PageSize"];
}

<h1>Task List</h1>

<form method="get" asp-action="Index" class="form-inline mb-3">
    <label for="pageSize" class="mr-2">Page Size:</label>
    <input type="number" id="pageSize" name="pageSize" class="form-control mr-2" value="@pageSize" min="1" />
    <button type="submit" class="btn btn-primary">Apply</button>
</form>

<div class="mb-3 d-flex gap-2">
    <a asp-action="Dashboard" class="btn btn-info">Dashboard</a>
    <a asp-action="Create" class="btn btn-primary">Create</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model.Items)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>
                    <a asp-action="Details" asp-route-id="@task.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@task.Id" class="btn btn-warning">Edit</a>
                    <form asp-action="Delete" asp-route-id="@task.Id" method="post" style="display:inline;">
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav>
    <ul class="pagination">
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                <a class="page-link"
                   asp-action="Index"
                   asp-route-page="@i"
                   asp-route-pageSize="@pageSize">
                    @i
                </a>
            </li>
        }
    </ul>
</nav>
