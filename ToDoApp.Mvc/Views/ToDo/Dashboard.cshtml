@model List<ToDoApp.FrontEnd.Models.DashboardTaskSummaryDto>

@{
    ViewData["Title"] = "Task Dashboard";
}

<h1>Task Dashboard</h1>

<table class="table">
    <thead>
        <tr>
            <th>Status</th>
            <th>Task Count</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var summary in Model)
        {
            <tr>
                <td>@summary.StatusName</td>
                <td>@summary.TaskCount</td>
                <td>
                    <a asp-action="TasksByStatus" asp-route-statusId="@summary.StatusId" class="btn btn-primary">
                        View Tasks
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to List</a>
