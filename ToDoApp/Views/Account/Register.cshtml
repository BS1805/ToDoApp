@model ToDoApp.Models.ViewModels.RegisterViewModel

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h2 class="h4 mb-0 d-flex align-items-center justify-content-center">
                        <i class="fas fa-user-plus me-3"></i>Create Your Account
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="Register" method="post">
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                <input asp-for="Email" class="form-control" placeholder="Enter your email address" />
                            </div>
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Create a strong password" />
                            </div>
                            <span asp-validation-for="Password" class="text-danger"></span>
                            <div class="form-text text-muted small mt-1">
                                <i class="fas fa-info-circle me-1"></i>
                                Password must be at least 8 characters long
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ConfirmPassword" class="form-label"></label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm your password" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-user-plus me-2"></i>Register
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <p class="mb-0">
                        Already have an account?
                        <a asp-action="Login" asp-controller="Account" class="text-primary">
                            Login here
                        </a>
                    </p>
                </div>
            </div>

            @* Optional: Terms of Service Link *@
            <div class="text-center mt-3">
                <p class="text-muted small mb-0">
                    By registering, you agree to our
                    <a href="#" class="text-muted">Terms of Service</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            // Optional: Password strength indicator
            $('#Password').on('input', function() {
                const password = $(this).val();
                const strengthBadge = $('#password-strength');

                if (password.length < 8) {
                    strengthBadge.text('Weak').removeClass('text-warning text-success').addClass('text-danger');
                } else if (password.length < 12) {
                    strengthBadge.text('Medium').removeClass('text-danger text-success').addClass('text-warning');
                } else {
                    strengthBadge.text('Strong').removeClass('text-danger text-warning').addClass('text-success');
                }
            });
        });
    </script>
}