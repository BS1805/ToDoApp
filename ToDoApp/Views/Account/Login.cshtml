@model ToDoApp.Models.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login to your account";
}

<style>
    .login-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        background-color: #f8f9fa;
    }

    .login-form {
        background-color: #ffffff;
        padding: 30px;
        border-radius: 5px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        width: 50%;
    }

        .login-form h4 {
            font-weight: bold;
            color: #007bff;
            margin-bottom: 20px;
        }

        .login-form .form-label {
            font-weight: bold;
            color: #333;
        }

        .login-form .form-control {
            border: 1px solid #ced4da;
            border-radius: 4px;
            color: #333;
        }

        .login-form .text-danger {
            color: #dc3545;
        }

        .login-form .btn-success {
            background-color: #007bff;
            color: #ffffff;
            border-color: #007bff;
            font-weight: bold;
            padding: 10px 20px;
            font-size: 16px;
            width: 48%;
            transition: background-color 0.3s;
        }

            .login-form .btn-success:hover {
                background-color: #0056b3;
                border-color: #0056b3;
            }

        .login-form .btn-secondary {
            background-color: #6c757d;
            color: #ffffff;
            border-color: #6c757d;
            font-weight: bold;
            padding: 10px 20px;
            font-size: 16px;
            width: 48%;
            transition: background-color 0.3s;
        }

            .login-form .btn-secondary:hover {
                background-color: #5a6268;
                border-color: #545b62;
            }

    .alert-danger {
        background-color: #f8d7da;
        color: #721c24;
        border-color: #f5c6cb;
        padding: 10px;
        margin-bottom: 20px;
        border-radius: 4px;
    }

    .radio-container {
        display: flex;
        justify-content: space-between;
    }

    .form-check {
        width: 48%;
    }

        .form-check input {
            margin-right: 5px;
        }
</style>

<div class="login-container">
    <div class="login-form">
        <h4>Login to Your Account</h4>

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger">
                <b>Sorry!</b> - @TempData["Error"]
            </div>
        }

        <form asp-action="Login" method="post" class="row g-3">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="col-12">
                <label asp-for="Email" class="form-label">Email Address</label>
                <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-12">
                <label asp-for="Password" class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="col-12">
                <div class="form-check">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                    <label asp-for="RememberMe" class="form-check-label">Remember Me</label>
                </div>
            </div>

            <div class="col-12">
                <div class="btn-container" style="display: flex; justify-content: space-between;">
                    <input class="btn btn-success" type="submit" value="Login" />
                    <a class="btn btn-secondary" asp-controller="Account" asp-action="Register">Register</a>
                </div>
            </div>
        </form>
    </div>
</div>
