@model ToDoApp.Models.ViewModels.TaskViewModel

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h2 class="h4 mb-0">Task Details</h2>
                    <span class="badge @(Model.IsCompleted ? "bg-success" : "bg-warning")">
                        @(Model.IsCompleted ? "Completed" : "Pending")
                    </span>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong class="d-block mb-2">Title</strong>
                        <p class="form-control-plaintext">@Model.Title</p>
                    </div>
                    <div class="mb-3">
                        <strong class="d-block mb-2">Description</strong>
                        <p class="form-control-plaintext">@(string.IsNullOrEmpty(Model.Description) ? "No description provided" : Model.Description)</p>
                    </div>
                    <div class="d-flex justify-content-between mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="fas fa-edit me-1"></i>Edit Task
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Back to List
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>