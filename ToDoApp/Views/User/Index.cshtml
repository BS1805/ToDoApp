@model IEnumerable<ToDoItem>

<div class="container-fluid px-4 py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center py-3">
                    <div>
                        <h2 class="h4 mb-0 d-flex align-items-center">
                            <i class="fas fa-list-check me-3"></i>Your To-Do List
                        </h2>
                    </div>
                    <div class="d-flex align-items-center">
                        <a asp-action="Create" class="btn btn-success btn-sm d-flex align-items-center">
                            <i class="fas fa-plus me-2"></i>Create New Task
                        </a>
                    </div>
                </div>

                <div class="card-body p-0">
                    @if (Model != null && Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th class="px-4 py-3 text-muted fw-normal">Title</th>
                                        <th class="px-4 py-3 text-muted fw-normal">Description</th>
                                        <th class="px-4 py-3 text-muted fw-normal">Status</th>
                                        <th class="text-center px-4 py-3 text-muted fw-normal">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="px-4 py-3 fw-bold">@item.Title</td>
                                            <td class="px-4 py-3 text-muted">
                                                @(string.IsNullOrEmpty(item.Description) ?
                                                    "<span class='fst-italic text-muted'>No description</span>" :
                                                    item.Description)
                                            </td>
                                            <td class="px-4 py-3">
                                                <span class="badge @(item.IsCompleted ? "bg-success" : "bg-warning text-dark")">
                                                    @(item.IsCompleted ? "Completed" : "Pending")
                                                </span>
                                            </td>
                                            <td class="text-center px-4 py-3">
                                                <div class="btn-group" role="group" aria-label="Task actions">
                                                    <a asp-action="Details" asp-route-id="@item.Id"
                                                       class="btn btn-outline-info btn-sm"
                                                       title="View Details">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a asp-action="Edit" asp-route-id="@item.Id"
                                                       class="btn btn-outline-primary btn-sm"
                                                       title="Edit Task">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a asp-action="Delete" asp-route-id="@item.Id"
                                                       class="btn btn-outline-danger btn-sm delete-task"
                                                       title="Delete Task">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <div class="card-footer bg-light d-flex justify-content-between align-items-center py-3">
                            <span class="text-muted">
                                <i class="fas fa-info-circle me-2"></i>
                                Total Tasks: @Model.Count()
                            </span>
                            <span class="text-muted">
                                Completed: @Model.Count(t => t.IsCompleted) |
                                Pending: @Model.Count(t => !t.IsCompleted)
                            </span>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-clipboard-list text-muted mb-3" style="font-size: 4rem;"></i>
                            <p class="text-muted">No tasks found. Create a new task to get started!</p>
                            <a asp-action="Create" class="btn btn-primary mt-3">
                                <i class="fas fa-plus me-2"></i>Create Your First Task
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Confirmation dialog for task deletion
            $('.delete-task').on('click', function (e) {
                if (!confirm('Are you sure you want to delete this task? This action cannot be undone.')) {
                    e.preventDefault();
                }
            });

            // Optional: Hover effects and interactivity
            $('tr').hover(
                function() { $(this).addClass('table-active'); },
                function() { $(this).removeClass('table-active'); }
            );
        });
    </script>
}