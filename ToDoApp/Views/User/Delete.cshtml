@model ToDoApp.Models.ViewModels.TaskViewModel

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h2 class="h4 mb-0">Delete Task</h2>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        Are you sure you want to delete this task? This action cannot be undone.
                    </div>
                    <div class="mb-3">
                        <strong class="d-block mb-2">Title</strong>
                        <p class="form-control-plaintext">@Model.Title</p>
                    </div>
                    <div class="mb-3">
                        <strong class="d-block mb-2">Description</strong>
                        <p class="form-control-plaintext">@(string.IsNullOrEmpty(Model.Description) ? "No description provided" : Model.Description)</p>
                    </div>
                    <div class="mb-3">
                        <strong class="d-block mb-2">Status</strong>
                        <span class="badge @(Model.IsCompleted ? "bg-success" : "bg-warning")">
                            @(Model.IsCompleted ? "Completed" : "Pending")
                        </span>
                    </div>
                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i>Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>